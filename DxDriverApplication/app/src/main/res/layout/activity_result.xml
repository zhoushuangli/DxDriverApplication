<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj"
    tools:context=".activity.ResultActivity">

    <Button
        android:layout_marginEnd="@dimen/dp_80"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/again_but_bind"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/ok"
        android:text="重新绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_80"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/but_out"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/no"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
       />

    <TextView
        android:layout_marginBottom="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bangding"
        android:drawablePadding="@dimen/dp_12"
        android:text="绑定成功!当前设备已绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="@dimen/dp_8"
        app:layout_constraintBottom_toBottomOf="@id/tv_text"
        android:id="@+id/tv_text_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6#"
        android:textColor="#EBBF2B"
        android:textSize="@dimen/sp_30"
        app:layout_constraintStart_toEndOf="@id/tv_text"
        app:layout_constraintTop_toTopOf="@id/tv_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bjnew"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_22"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="姓        名:"
        android:id="@+id/tv_name_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintStart_toEndOf="@id/tv_name_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:id="@+id/tv_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_name_value"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_22"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="单        位:"
        android:id="@+id/tv_class_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="@id/tv_class_key"
        app:layout_constraintStart_toEndOf="@id/tv_class_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:id="@+id/tv_class_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintTop_toBottomOf="@id/tv_class_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="职        位:"
        android:id="@+id/tv_job_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toEndOf="@id/tv_job_key"
        app:layout_constraintTop_toTopOf="@id/tv_job_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:id="@+id/tv_job_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp_22"
        app:layout_constraintTop_toBottomOf="@id/tv_job_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:text="联系方式:"
        android:id="@+id/tv_phone_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintStart_toEndOf="@id/tv_phone_key"
        app:layout_constraintTop_toBottomOf="@id/tv_job_key"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:id="@+id/tv_phone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="@dimen/dp_26"
        android:id="@+id/but_zc"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_key"
        app:layout_constraintStart_toStartOf="@id/tv_phone_key"
        android:text="正常"
        android:textColor="#B3FFFFFF"
        android:background="@drawable/butfause"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"/>
    <Button
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_26"

        android:id="@+id/but_jy"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_key"
        app:layout_constraintStart_toEndOf="@id/but_zc"
        android:text="加油"
        android:textColor="#B3FFFFFF"
        android:background="@drawable/butfause"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"/>
    <Button
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_26"
        android:id="@+id/but_gz"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_key"
        app:layout_constraintStart_toEndOf="@id/but_jy"
        android:text="故障"
        android:textColor="#B3FFFFFF"
        android:background="@drawable/butfause"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_40"/>
<View
    android:id="@+id/view1"
    android:layout_marginTop="@dimen/dp_20"
    app:layout_constraintTop_toBottomOf="@id/but_gz"
    android:background="@color/view_line"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_1"/>

    <Button
        android:background="#213053"
        android:visibility="visible"
        android:id="@+id/but_dialog_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:textColor="#228EE8"
        android:textSize="@dimen/sp_18"
        android:text="退出登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_item_but_bg"
    android:orientation="vertical">

    <TextView
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_50"
        android:id="@+id/tv_num_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />5

    <Button
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toBottomOf="@id/tv_num_key"
        android:layout_marginBottom="@dimen/dp_26"
        android:id="@+id/dialog_but_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/cancel_but"
        android:text="确定"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_40"/>
    <Button
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_but_ok"
        android:id="@+id/dialog_but_cancel"
        android:layout_marginStart="@dimen/dp_30"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/confrim_but"
        android:text="取消"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_40"/>

</androidx.constraintlayout.widget.ConstraintLayout>